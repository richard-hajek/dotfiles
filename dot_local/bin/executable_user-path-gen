#!/usr/bin/env bash

append_path () {
    case ":$PATH:" in
        *:"$1":*)
            ;;
        *)
            PATH="${PATH:+$PATH:}$1"
    esac
}

prepend_path () {
    case ":$PATH:" in 
        *:"$1":*)
            ;;
        *)
            PATH="$1${PATH:+$PATH:}"
    esac
}

PATH="${PATH}"
bin="${HOME}/.local/bin"

for folder in `find -L $bin`; do
	[ -d "$folder" ] && append_path "${folder}"
done

export PATH
