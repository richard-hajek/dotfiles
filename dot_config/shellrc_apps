if hash chezmoi &> /dev/null; then
	( (
	OUTPUT=$(chezmoi status 2>&1)

	if [[ ! -z "${OUTPUT// }" ]]; then
		notify-send "Chezmoi" "$OUTPUT"
	fi

	) & )
fi

if hash pyenv &> /dev/null; then
	eval "$(pyenv init -)"
fi

if [ -f /usr/share/nvm/init-nvm.sh ]; then
	source /usr/share/nvm/init-nvm.sh
fi
