#!/usr/bin/env bash

echo "Sourcing .xprofile"

. ~/.profile
wallpaper-select
setxkbmap cz -variant coder

picom &
xinput set-prop 'Asus TouchPad' 'libinput Tapping Enabled' 1
nm-applet &
sudo timedatectl set-ntp true &

#if hash xautolock &> /dev/null; then
#  xautolock -locker 'sudo shutdown now' -notifier 'notify-send -a "System" "Inactivity" "Will shut down in 10 min due to inactivity"' -notify 600 -noclose -time 15 &
#fi

if hash obsidian &> /dev/null; then
  obsidian &
fi

if hash numlockx &> /dev/null; then
  numlockx on
fi
