echo "Sourcing ~/.zshrc"

autoload -Uz compinit
compinit -d ~/.cache/zsh/zcompdump-$ZSH_VERSION

source ~/.config/shellrc
source ~/.config/zshrc_ohmyzsh
source ~/.config/shellrc_aliases # fucking ohmyzsh overwrites aliases

if hash bat &> /dev/null; then

  function bathelp() {

    if [[ $# > 0 ]]; then
      echo "Bad use of global --help alias detected! Please use \\--help instead, optionally adding | bathelp manually"
      return
    fi

    bat --language=help --style=plain
  }

  alias -g -- -h='-h 2>&1 | bathelp'
  alias -g -- --help='--help 2>&1 | bathelp'
fi

setopt extendedglob
setopt COMPLETE_ALIASES
setopt no_share_history
unsetopt share_history
zstyle ':completion:*' completer _expand_alias _complete _ignored

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/meowxiik/.local/share/mambaforge/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
  eval "$__conda_setup"
else
  if [ -f "/home/meowxiik/.local/share/mambaforge/etc/profile.d/conda.sh" ]; then
    . "/home/meowxiik/.local/share/mambaforge/etc/profile.d/conda.sh"
  else
    export PATH="/home/meowxiik/.local/share/mambaforge/bin:$PATH"
  fi
fi
unset __conda_setup

if [ -f "/home/meowxiik/.local/share/mambaforge/etc/profile.d/mamba.sh" ]; then
  . "/home/meowxiik/.local/share/mambaforge/etc/profile.d/mamba.sh"
fi
# <<< conda initialize <<<
