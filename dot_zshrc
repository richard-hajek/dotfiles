    if [ -f "/home/meowxiik/.local/share/anaconda3/etc/profile.d/conda.sh" ]; then
        . "/home/meowxiik/.local/share/anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/meowxiik/.local/share/anaconda3/bin:$PATH"
    fi
fi
